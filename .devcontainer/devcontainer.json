{
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "name": "Python - CoP Lab ðŸ˜Ž",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-dotnettools.dotnet-interactive-vscode"
      ],
      "settings": {
        "workbench.colorTheme": "Tomorrow Night Blue",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install jupyter jupyterlab notebook ipykernel pandas numpy matplotlib seaborn plotly scikit-learn kagglehub requests",
  "postStartCommand": "jupyter lab --ip=0.0.0.0 --no-browser --allow-root",
  "forwardPorts": [
    8888,
    8080
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}